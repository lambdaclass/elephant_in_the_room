<div class="row">
  <div class="col-xs-0 col-md-1 col-lg-2"></div>
  <div class="col-xs-12 col-md-10 col-lg-8">
    <div class="el-form uk-flex uk-flex-center">
      <div class="uk-card uk-card-default">

        <div class="uk-card-header">
          <div class="uk-grid-small uk-flex-middle" uk-grid>
            <div class="uk-width-expand">
              <h3 class="uk-card-title uk-margin-remove-bottom">
                <div><center><legend class="uk-legend">Edit Author</legend></center></div>
              </h3>
            </div>
          </div>
        </div>

        <div class="uk-card-body">
          <%= render "form.html", Map.put(assigns, :action, author_path(@conn, :update, URI.encode(@author.name))) %>
        </div>
      </div>
    </div>
  </div>
</div>

<span><%= link "Back", to: author_path(@conn, :index) %></span>
