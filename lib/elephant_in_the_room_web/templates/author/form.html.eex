<%= form_for @changeset, @action, [class: "uk-form-stacked", multipart: true], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <fieldset class="uk-fieldset">
    <div class="uk-margin">
      <%= label f, :name, class: "uk-form-label" %>
      <%= text_input f, :name, class: "uk-form-controls uk-input" %>
      <%= error_tag f, :name %>
    </div>

    <div class="uk-margin">
      <%= label f, :is_columnist, "Columnist?", class: "uk-form-label" %>
      <%= radio_button(f, :is_columnist, true) %> Yes
      <%= radio_button(f, :is_columnist, false) %> No
      <%= error_tag f, :name %>
    </div>

    <div class="uk-margin">
      <%= label f, :image, class: "uk-form-label" %>
      <%= file_input f, :image, class: "uk-form-controls uk-input" %>
      <%= error_tag f, :image %>
    </div>

    <div class="uk-margin">
      <%= label f, :description, class: "uk-form-label" %>
      <%= text_input f, :description, class: "uk-form-controls uk-input" %>
      <%= error_tag f, :description %>
    </div>

    <div class="uk-margin">
      <center>
        <%= submit "Submit", class: "uk-button uk-button-primary" %>
      </center>
    </div>
  </fieldset>
<% end %>
