<div class="uk-card uk-grid-collapse uk-height-small" uk-grid>
  <div class="uk-grid-collapse" uk-grid>
    <div class="post-small-body uk-card-body">
      <p class="post-small-title uk-card-title"><%= :proplists.get_value(:title, assigns.data) %></p>
      <p class="post-small-author"><%= :proplists.get_value(:author, assigns.data) %></p>
    </div>
  </div>
  <div class="post-thumbnail-small uk-card-media-right uk-cover-container uk-height-small uk-align-center">
    <img height="40px" width="40px" src="<%= :proplists.get_value(:src, assigns.data) %>" alt="" uk-cover>
    <canvas width="86" height="86"></canvas>
  </div>
</div>

<style>
.post-small-body {
  overflow-wrap: break-word;
  padding-right: 0;
  padding-bottom: 0;
  padding-top: 30px;
}
.post-small-title {
  font-weight: 900;
  font-variant-numeric: lining-nums;
  letter-spacing: -.25px;
  font-size: 16px;
  line-height: 18px;
  color: #000;
  display: inline;
  box-sizing: border-box;
}

.post-small-author {
  letter-spacing: 1px;
  font-size: 12px;
  text-transform: uppercase;
  white-space: normal;
  line-height: 13.5px;
  color: #000;
  box-sizing: border-box;
}

.post-thumbnail-small {
  width: 78px;
  height: 78px;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}
</style>

