<div class="row">
  <div class="col-xs-0  col-sm-2 col-md-4"> </div>
  <div class="col-xs-12 col-sm-8 col-md-4">

    <%= form_for @changeset, @action, fn f -> %>
    <fieldset class="uk-fieldset">
      <legend class="uk-legend"><%= @form_title %></legend>
      <%= if @changeset.action do %>
        <div class="alert alert-danger">
          <p>Por favor revisa los errores a continuación.</p>
        </div>
      <% end %>
    </fieldset>

    <div class="uk-margin">
      <%= label f, :username, "Usuario", class: "uk-form-label field-required" %>
      <%= text_input f, :username, class: "uk-input uk-form-small" %>
      <%= error_tag f, :username %>
    </div>

    <div class="uk-margin">
      <%= label f, :role, "Rol", class: "uk-form-label field-required" %>
      <%= select f, :role_id, get_roles(), class: "uk-select uk-form-small" %>
      <%= error_tag f, :role_id %>
    </div>

    <div class="uk-margin">
      <%= label f, :firstname, "Nombre", class: "uk-form-label field-required" %>
      <%= text_input f, :firstname, class: "uk-input uk-form-small" %>
      <%= error_tag f, :firstname %>
    </div>

    <div class="uk-margin">
      <%= label f, :lastname, "Apellido", class: "uk-form-label field-required" %>
      <%= text_input f, :lastname, class: "uk-input uk-form-small" %>
      <%= error_tag f, :lastname %>
    </div>

    <div class="uk-margin">
      <%= label f, :email, "Email", class: "uk-form-label field-required" %>
      <%= text_input f, :email, class: "uk-input uk-form-small" %>
      <%= error_tag f, :email %>
    </div>

    <div class="uk-margin">
      <%= label f, :password, "Contraseña", class: "uk-form-label field-required" %>
      <%= text_input f, :password, class: "uk-input uk-form-small", type: "password", value: "" %>
      <%= error_tag f, :password %>
    </div>

    <div class="uk-margin">
      <%= submit "Enviar", class: "uk-button uk-button-primary" %>
    </div>
  </div>
<% end %>
