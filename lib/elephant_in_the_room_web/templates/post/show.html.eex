<h2>Show Post</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Image:</strong>
    <%= @post.image %>
  </li>

  <li>
    <strong>Content:</strong>
    <%= @post.content %>
  </li>

</ul>

<span><%= link "Edit", to: site_category_post_path(@conn, :edit, @site, @category, @post) %></span>
<span><%= link "Back", to: site_category_post_path(@conn, :index, @site, @category) %></span>
