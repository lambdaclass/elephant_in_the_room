<h2>Show Post</h2>
<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Content:</strong>
    <%= raw show_content @post %>
  </li>

  <li>
    <strong>Image:</strong>
    <%= @post.image %>
  </li>

</ul>

<span>
  <%= link "Edit", to: site_post_path(@conn, :edit, @site, @post) %>
</span>
<span>
  <%= link "Back", to: site_post_path(@conn, :index, @site) %>
</span>
