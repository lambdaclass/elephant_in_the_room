<h2>Listing Posts</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Content</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for post <- @posts do %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.image %></td>
      <td><%= post.content %></td>

      <td class="text-right">
        <span><%= link "Show", to: site_category_post_path(@conn, :show, @site, @category, post), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: site_category_post_path(@conn, :edit, @site, @category, post), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: site_category_post_path(@conn, :delete, @site, @category, post), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Post", to: site_category_post_path(@conn, :new, @site, @category) %></span>
