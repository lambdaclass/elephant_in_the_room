<h2>Create a new post</h2>

<%= form_for @changeset, post_path(@conn, :create_new), fn f -> %>
  <div class="form-group">
    <%= label      f, :title %>
    <%= text_input f, :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label    f, :content %>
    <%= textarea f, :content , class: "form-control", rows: "5" %>
  </div>

  <%= submit "Create new", class: "btn btn-primary" %>
<% end %>
 
